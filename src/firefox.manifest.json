{
    "name": "bilimap",
    "version": "1.2.2",
    "manifest_version": 2,
    "description": "在B站视频页面生成弹幕图表，展示符合特定规则的弹幕在某一时刻的数量。",
    "icons": {
        "128": "icon/icon.png"
    },
    "browser_action": 
    {
        "default_icon": "icon/icon.png",
        "default_title": "bilimap",
        "default_popup": "popup/popup.html"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.bilibili.com/video*",
                "https://*.bilibili.com/bangumi*"
            ],
            "js": [
                "content/bignumber.js",
                "content/echarts.min.js",
                "content/main.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://*.bilibili.com/video*",
                "https://*.bilibili.com/bangumi*"
            ],
            "js": [
                "content/regvideoevent.js"
            ],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        "page/pagevideoinfo.js",
        "page/pagevideoaction.js"
    ],
    "omnibox": { "keyword" : "bav" },
    "permissions": [
        "contextMenus",
        "tabs",
        "activeTab",
        "downloads",
        "webRequest",
        "webRequestBlocking",
        "storage",
        "unlimitedStorage",
        "https://*.bilibili.com/*"
    ],
    "applications": {
        "gecko": {
            "id": "nightstream@foxmail.com"
        }
    },
    "homepage_url": "https://github.com/nightstream/bilimap"
}