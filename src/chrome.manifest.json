{
    "name": "bilimap",
    "version": "1.1.0",
    "manifest_version": 2,
    "description": "在B站视频页面生成弹幕图表，展示符合特定规则的弹幕在某一时刻的数量。",
    "icons": {
        "128": "icon/icon.png"
    },
    "browser_action": 
    {
        "default_icon": "icon/icon.png",
        "default_title": "bilimap",
        "default_popup": "popup/popup.html"
    },
    "background": {
        "scripts": [
            "background/cmptb.js",
            "background/bkgrd.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.bilibili.com/video*",
                "https://*.bilibili.com/bangumi*"
            ],
            "js": [
                "page/echarts.min.js",
                "page/main.js"
            ],
            "run_at": "document_end"
        }
    ],
    "omnibox": { "keyword" : "bav" },
    "permissions": [
        "contextMenus",
        "tabs",
        "downloads",
        "webRequest",
        "webRequestBlocking",
        "notifications",
        "storage",
        "unlimitedStorage",
        "https://*.bilibili.com/*"
    ],
    "externally_connectable": {
    	"matches": ["*://*.bilibili.com/*"]
    },
    "homepage_url": "https://github.com/nightstream/bilimap"
}